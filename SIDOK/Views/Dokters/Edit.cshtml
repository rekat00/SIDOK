@model SIDOK.Models.DTO.DokterSpesialisasiDTO

@{
    ViewData["Title"] = "Edit";
}
@{
    IList<SIDOK.Models.Spesialisasi> spesialisasi = ViewData["spesialisasi"] as IList<SIDOK.Models.Spesialisasi>;
}

<h1>Edit</h1>

<h4>Dokter</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" id="myForm" onsubmit="editForm(event)">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group my-2">
                <label asp-for="Nama" class="control-label"></label>
                <input asp-for="Nama" class="form-control" />
                <span asp-validation-for="Nama" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Nip" class="control-label"></label>
                <input placeholder="Disabled input" asp-for="Nip" class="form-control" disabled />
                <input  asp-for="Nip" class="form-control" hidden />
                <span asp-validation-for="Nip" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Nik" class="control-label"></label>
                <input placeholder="Disabled input" asp-for="Nik" class="form-control" disabled />
                <input asp-for="Nik" class="form-control" hidden />
                <span asp-validation-for="Nik" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Tanggal_lahir" class="control-label"></label>
                <input type="date" asp-for="Tanggal_lahir" class="form-control" />
                <span asp-validation-for="Tanggal_lahir" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Tempat_lahir" class="control-label"></label>
                <input asp-for="Tempat_lahir" class="form-control" />
                <span asp-validation-for="Tempat_lahir" class="text-danger"></span>
            </div>
            <label asp-for="Jenis_kelamin" class="form-check-label">Jenis Kelamin</label><br>
            <div class="form-check my-2">
                <div class="row">
                    <div class="col-sm">
                        <input type="radio" asp-for="Jenis_kelamin" value="1" class="form-check-input">
                        <label asp-for="Jenis_kelamin" class="form-check-label">Pria</label><br>
                    </div>
                    <div class="col-sm">
                        <input type="radio" asp-for="Jenis_kelamin" value="2" class="form-check-input">
                        <label asp-for="Jenis_kelamin" class="form-check-label">Wanita</label><br>
                    </div>
                </div>
            </div>
            <div class="form-group my-2">
                <label asp-for="IdSpesialisasi">Spesialisasi</label>
                <select asp-for="IdSpesialisasi" class="form-select">
                    @foreach (var spesisalis in spesialisasi)
                    {
                        <option value="@spesisalis.Id">@spesisalis.Nama</option>
                    }
                    <option value="@Model.IdSpesialisasi">@Model.Spesialisasi</option>

                </select>

            </div>
            <div class="form-group my-2">
                <input type="submit" value="Save" class="btn btn-primary" onclick="displayAlert()"/>


            </div>
        </form>
    </div>
</div>



<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
