@model IEnumerable<SIDOK.Models.DTO.PoliDTO>

@{
    ViewData["Title"] = "Index";
}

<h1>Schedule</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Buat Jadwal Baru</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Dokter
            </th>
            <th>
                Hari
            </th>
@*            <th>
                @Html.DisplayNameFor(model => model.IdJadwal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdDokter)
            </th>*@
            <th>
                Poli
            </th>
            <th>
                Ruangan
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NamaDokter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hari)
            </td>
@*            <td>
                @Html.DisplayFor(modelItem => item.IdJadwal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdDokter)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.NamaPoli)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LokasiPoli)
            </td>
            <td class="btn-group-sm">
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.IdJadwal">Edit</a> 
                <a class="btn btn-success" asp-action="Details" asp-route-id="@item.IdJadwal">Details</a> 
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdJadwal">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
