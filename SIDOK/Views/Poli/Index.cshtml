@model IEnumerable<SIDOK.Models.Poli>

@{
    ViewData["Title"] = "Index";
}

<h1>Daftar Poli</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Tambah Poli</a>
</p>

<form asp-action="Index" class="input-group" method="GET">
    <p>

        <input type="text" placeholder="Cari Poli" name="Search" class="form-control" />
        <div class="input-group-append">
            <input class="btn btn-outline-primary" type="submit" value="Search" />
        </div>

    </p>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Poli
            </th>
            <th>
                Ruangan
            </th>
            <th></th>

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NamaPoli)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LokasiPoli)
            </td>
            <td class="btn-group-sm">
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.IdPoli">Edit</a> 
                <a class="btn btn-success" asp-action="Details" asp-route-id="@item.IdPoli">Details</a>
                <a  class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdPoli">Delete</a>
            </td>
         
        </tr>
}
    </tbody>
</table>
